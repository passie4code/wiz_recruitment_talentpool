<odoo>
  <template id="portal_experience" name="Mijn Werkervaring">
    <t t-call="portal.portal_layout">
      <div class="o_portal_container">
        <h2>ðŸ’¼ Mijn Werkervaring</h2>
        <a href="/my/experience/add" class="btn btn-success mb-3">Nieuwe ervaring toevoegen</a>

        <t t-if="experiences">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Functie</th>
                <th>Bedrijf</th>
                <th>Startdatum</th>
                <th>Einddatum</th>
                <th>Acties</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="experiences" t-as="exp">
                <tr>
                  <td><t t-esc="exp.name"/></td>
                  <td><t t-esc="exp.company"/></td>
                  <td><t t-esc="exp.start_date"/></td>
                  <td><t t-esc="exp.end_date"/></td>
                  <td>
                    <a t-att-href="'/my/experience/edit/%s' % exp.id">Wijzig</a>
                  </td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-else="">
          <p>Je hebt nog geen werkervaring toegevoegd.</p>
        </t>
      </div>
    </t>
  </template>
</odoo>
