<odoo>
  <!-- Formulierweergave -->
  <record id="view_talent_form" model="ir.ui.view">
    <field name="name">wiz.recruitment.talentpool.talent.form</field>
    <field name="model">wiz.recruitment.talentpool.talent</field>
    <field name="arch" type="xml">
      <form string="Talent">
        <header>
          <button name="action_reapply" type="object" string="Solliciteer opnieuw" class="btn-primary"/>

          <button name="action_create_portal_user" type="object" string="CreÃ«er portaalgebruiker" class="btn-secondary"
          if="not portal_user_id"/>

          <button name="action_reset_portal_user" type="object" string="Reset portaalgebruiker" class="btn-secondary"
          if="portal_user_id"/>

            <button name="action_open_linkedin" type="object" string="Bekijk LinkedIn" class="btn-info"
          if="linkedin_profile"/>
        </header>
        <sheet>
        <h2>Persoonsgegevens</h2>
          <group>
            <field name="name"/>
            <field name="email"/>
            <field name="linkedin_profile"/>
            <field name="cv_attachment_id"/>
            <field name="creation_date"/>
            <field name="last_update_date"/>
            <field name="inactive_tag" readonly="1"/>
          </group>
          <h2>Persoonlijke wensen en afstemmingen</h2>
          <group>
            <field name="searching_for"/>
            <field name="not_wanted"/>
            <field name="notes"/>
          </group>
          <h2>Educatie/Scholing</h2>
          <group>
            <field name="education_ids">
              <tree>
                <field name="name"/>
                <field name="institute"/>
                <field name="start_date"/>
                <field name="end_date"/>
              </tree>
            </field>
          </group>
          <h2>Werk-ervaring</h2>
          <group>
            <field name="application_history_ids">
              <tree>
                <field name="name"/>
                <field name="job_id"/>
                <field name="stage_id"/>
              </tree>
            </field>
          </group>
          <h2>Markeringen</h2>
          <group>
            <field name="marked_for_deletion"/>
            <field name="deletion_reason"/>
            <field name="marked_by_user"/>
            <field name="portal_user_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Lijstweergave -->
  <record id="view_talent_tree" model="ir.ui.view">
    <field name="name">wiz.recruitment.talentpool.talent.tree</field>
    <field name="model">wiz.recruitment.talentpool.talent</field>
    <field name="arch" type="xml">
      <tree string="Talent Pool">
        <field name="name"/>
        <field name="email"/>
        <field name="creation_date"/>
        <field name="inactive_tag"/>
      </tree>
    </field>
  </record>

  <!-- Actie voor menu -->
  <record id="action_talentpool_talents" model="ir.actions.act_window">
    <field name="name">Talent Pool</field>
    <field name="res_model">wiz.recruitment.talentpool.talent</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
