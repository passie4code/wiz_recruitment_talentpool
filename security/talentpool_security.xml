    <!-- Gebruikersgroep: Talent Pool Manager -->
    <record id="group_talentpool_manager" model="res.groups">
      <field name="name">Talent Pool Manager</field>
      <field name="category_id" ref="wiz_recruitment_talentpool.module_category_talentpool"/>
    </record>

